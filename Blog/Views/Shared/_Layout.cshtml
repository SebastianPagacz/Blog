<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <title>@ViewData["Title"] - Blog</title>
</head>
<body>
    <header>
        <div class="menu">
            <div class="site-logo">
            </div>
            <div class="menu-link-container">
                <a class="menu-link" asp-controller="Home" asp-action="Index">Home</a>
                <a class="menu-link" asp-controller="Home" asp-action="Posts">Posts</a>
                <a class="menu-link" asp-controller="Home" asp-action="Create">Create Post</a>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="footer-box">
            <a class="footer-copy">&copy; Sebastian Pagacz 2025</a>
        </div>
    </footer>
</body>
</html>